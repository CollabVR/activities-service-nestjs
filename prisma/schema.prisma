generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id              Int    @id @default(autoincrement())
  name            String @unique
  description     String
  startTime       String
  endTime         String
  maxParticipants Int
  activityUsers   ActivityUser[]
  environmentId   String
  status          String
}


enum UserRole {
  STUDENT
  MODERATOR
}

model ActivityUser {
  id          Int       @id @default(autoincrement())
  activityId  Int      
  userId      Int       @unique
  userName    String
  role        UserRole
  activity    Activity  @relation(fields: [activityId], references: [id])
  @@index([activityId])
}